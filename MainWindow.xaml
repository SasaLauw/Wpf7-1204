<Window x:Class="WpfApp5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WpfApp5"
        Title="學生選課系統" Height="600" Width="700">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="210"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 上方選學生 -->
        <StackPanel Grid.Row="0" Grid.ColumnSpan="3"
                    Orientation="Horizontal"
                    Background="#FFF3E5D0">

            <Label Content="學生"
                   Margin="30,0,0,0"
                   VerticalAlignment="Center"
                   FontSize="20"/>

            <ComboBox x:Name="StudentComboBox"
                      Width="300"
                      Height="30"
                      Margin="20,10"
                      Background="LightPink"/>
        </StackPanel>

        <!-- 下方狀態列 -->
        <StatusBar Grid.Row="3" Grid.ColumnSpan="3">
            <TextBlock x:Name="StatusTextBlock" Text="Ready"/>
        </StatusBar>

        <!-- 中間 TabControl -->
        <TabControl Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3">

            <!-- 以教師分類 -->
            <TabItem Header="以教師分類課程">
                <TreeView x:Name="TeacherTreeView">
                    <TreeView.Resources>

                        <HierarchicalDataTemplate DataType="{x:Type local:Teacher}"
                                                  ItemsSource="{Binding TeachingCourses}">
                            <StackPanel Orientation="Horizontal">
                                <Image Width="40" Source="images/teacher.png"/>
                                <TextBlock Text="{Binding TeacherName}" Margin="5,0"/>
                            </StackPanel>
                        </HierarchicalDataTemplate>

                        <DataTemplate DataType="{x:Type local:Course}">
                            <StackPanel Orientation="Horizontal">
                                <Image Width="40" Source="images/course.png"/>
                                <TextBlock Text="{Binding CourseName}" Margin="10,0"/>
                                <TextBlock Text=" - "/>
                                <TextBlock Text="{Binding Point}"/>
                                <TextBlock Text=" 學分"/>
                            </StackPanel>
                        </DataTemplate>

                    </TreeView.Resources>
                </TreeView>
            </TabItem>

            <!-- 所有課程 -->
            <TabItem Header="所有課程">
                <ListBox x:Name="CourseListBox">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <Image Width="30" Source="images/teacher.png"/>
                                    <TextBlock Text="{Binding Tutor.TeacherName}" Margin="10,0"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <Image Width="30" Source="images/course.png"/>
                                    <TextBlock Text="{Binding CourseName}" Margin="10,0"/>
                                </StackPanel>

                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </TabItem>

        </TabControl>

        <!-- ✅ 右側 已選課程 + 功能 -->
        <StackPanel Grid.Row="1" Grid.Column="1" Background="AliceBlue" Margin="5">

            <TextBlock Text="已選課程"
                       FontSize="18"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,10"/>

            <ListBox x:Name="SelectedCourseListBox" Height="250">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding CourseName}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Button Content="選課 Choose" Height="50" Margin="8" Click="ChooseButton_Click"/>
            <Button Content="退選 Cancel" Height="50" Margin="8" Click="CancelButton_Click"/>
            <Button Content="存檔 Save" Height="50" Margin="8" Click="SaveButton_Click"/>

        </StackPanel>

    </Grid>
</Window>
